{
    "name": "jutge-vscode",
    "displayName": "jutge-vscode",
    "publisher": "jutge",
    "description": "Visual Studio Code extension for Jutge.org",
    "version": "0.0.3",
    "repository": "https://github.com/jutge-org/jutge-vscode",
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onWebviewPanel:problemWebview"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsWelcome": [
            {
                "view": "jutgeTreeView",
                "contents": "You have not signed in to jutge.org yet.\n[Sign-in to jutge.org](command:jutge-vscode.signIn)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "jutge",
                    "title": "Jutge.org",
                    "icon": "resources/jutge-icon.svg"
                }
            ]
        },
        "views": {
            "jutge": [
                {
                    "id": "jutgeTreeView",
                    "name": "jutge-vscode",
                    "icon": "resources/lightbulb-regular.svg",
                    "contextualTitle": "Jutge.org"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "jutge-vscode.refreshTree",
                    "when": "view == jutgeTreeView",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "jutge-vscode.showProblem",
                "title": "Jutge - Show Problem"
            },
            {
                "command": "jutge-vscode.signIn",
                "title": "Jutge - Sign In"
            },
            {
                "command": "jutge-vscode.signOut",
                "title": "Jutge - Sign Out"
            },
            {
                "command": "jutge-vscode.refreshTree",
                "title": "Jutge - Refresh Tree",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "configuration": {
            "title": "Jutge.org",
            "properties": {
                "jutge-vscode.runner.python.flags": {
                    "type": "array",
                    "default": [
                        "-u"
                    ],
                    "description": "The flags to run Python scripts (by default, the flags jutge.org uses)"
                },
                "jutge-vscode.runner.cpp.command": {
                    "type": "string",
                    "default": "g++",
                    "description": "The command to compile C++ programs"
                },
                "jutge-vscode.runner.cpp.flags": {
                    "type": "array",
                    "default": [
                        "-std=c++17",
                        "-O2",
                        "-Wall",
                        "-Wextra",
                        "-Wshadow",
                        "-pedantic"
                    ],
                    "description": "The flags to compile C++ programs (by default, the flags jutge.org uses)"
                },
                "jutge-vscode.problem.preferredLang": {
                    "type": "string",
                    "default": "Català",
                    "enum": [
                        "Català",
                        "Castellano",
                        "English"
                    ],
                    "description": "The preferred language for problem descriptions."
                }
            }
        }
    },
    "scripts": {
        "compile": "node ./esbuild.js",
        "watch": "node ./esbuild.js --watch",
        "lint": "eslint src --ext ts",
        "clean": "rm -rf out dist",
        "prepare": "husky",
        "format": "prettier --write * --ignore-unknown",
        "package": "NODE_ENV=production node ./esbuild.js",
        "vscode:prepublish": "bun package",
        "vscode:package": "vsce package",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@types/node": "^18.19.80",
        "@types/vscode": "^1.98.0",
        "@types/vscode-webview": "^1.57.5",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vscode/vsce": "^3.3.0",
        "esbuild": "^0.16.17",
        "eslint": "^8.57.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "prettier": "^3.5.3",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.5",
        "@vscode/webview-ui-toolkit": "^1.4.0",
        "yaml": "^2.7.0"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*": "prettier --write --ignore-unknown"
    },
    "extensionDependencies": [
        "ms-python.python"
    ]
}
